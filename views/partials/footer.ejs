</main>
<div class="fixed-action-btn">
    <a href="#filter-modal" id="FAB" class="waves-effect waves-light modal-trigger btn-large purple lighten-1">Filters</a>
    <!-- <a href="#filter-modal" class="btn-floating btn-large waves-effect waves-light modal-trigger"><i class="material-icons">sort</i></a> -->
</div>

<!-- Modal Structure -->
<div id="filter-modal" class="modal bottom-sheet modal-fixed-footer">
    <div class="modal-content">
        <h5>Filter and Sort</h5>
        <p>Browse exactly what you want</p>
        <div class="row">
            <br>
            <div class="input-field col s12 m8 offset-m2">
                <select>
                    <option value="" disabled selected>Category</option>
                    <% if (typeof categories !== 'undefined') { %>
                    <% categories.forEach(c => { %>
                    <li class="collection-item">
                        <option value="<%= c.slug %>"><%= c.title %></option>
                    </li>
                    <% }) %>
                    <% } %>
                </select>
                <label>Product Category</label>
            </div>
            <br><br><br>
            <div class="col s12 m8 offset-m2">
                <label>Price range</label>
                <br>
                <div id="range">
                </div>
                <br>
                <span id="price-min">₹ Minimum</span>
                <span><strong> - </strong></span>
                <span id="price-max">₹ Maximum</span>
            </div>
            <br><br><br>
            <div class="col s12 m8 offset-m2">
                <br>
                <label>Sort</label>
                <p>
                    <label>
                        <input name="sort" type="radio" checked />
                        <span>Relevance</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input name="sort" type="radio" />
                        <span>Popularity</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input name="sort" type="radio" />
                        <span>Price: Low to High</span>
                    </label>
                </p>
                <p>
                    <label>
                        <input name="sort" type="radio" />
                        <span>Price: High to Low</span>
                    </label>
                </p>

            </div>
        </div>
    </div>
    <div class="modal-footer">
        <a href="#" class="modal-close waves-effect btn-flat">Cancel</a>
        <a href="#!" class="modal-close waves-effect waves-teal btn-flat">Apply</a>
    </div>
</div>

<footer class="page-footer grey lighten-5">
    <div class="container">
        <div class="row">
            <div class="col l4  s12">
                <h5 class="grey-text text-darken-4">Pages</h5>
                <ul>
                    <% if (typeof pages !== 'undefined') { %>
                    <% pages.forEach(page => { %>
                    <li>
                        <% if (page.slug=="home") { %>
                        <a class="grey-text text-darken-2" href="/"><%=page.title%></a>
                        <% }else{ %>

                        <a class="grey-text text-darken-2" href="/<%= page.slug %>"><%=page.title%> </a>

                        <% } %>
                    </li>
                    <% }) %>
                    <% } %>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright blue-grey darken-2 ">
        <div class="container">
            <span class="white-text ">© 2020 Copyright</span>
            <a class="white-text right" href="#">GitHub</a>
        </div>
    </div>
</footer>


<script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
<script src="https://cdn.ckeditor.com/ckeditor5/21.0.0/classic/ckeditor.js"></script>
<script src="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.js"></script>

<script src="/js/index.js"></script>

<script>
    if (window.history.replaceState) {
        window.history.replaceState(null, null, window.location.href);
    }



    document.addEventListener('DOMContentLoaded', function () {
        M.AutoInit();
        var initData = JSON.parse('<%-JSON.stringify(searchTerms)%>');
        var elem = document.querySelector('.collapsible.expandable');
        var instance = M.Collapsible.init(elem, {
            accordion: false
        });


        var dropdown = document.querySelectorAll('.dropdown-trigger');
        var instances = M.Dropdown.init(dropdown, {
            constrainWidth: false,
            hover: true,
            coverTrigger: false
        });

        var slider = document.querySelectorAll('.slider');
        var instances = M.Slider.init(slider, {
            interval: 3000,
            indicators: false,
            height: 200
        });

        var autocompletes = document.querySelectorAll('.autocomplete');
        var instances = M.Autocomplete.init(autocompletes, {
            data: initData,
            minLength: 1,
            limit: 30,
            onAutocomplete: function (val) {
                $('#search, #search-header, #search-mobile').val(val);
                $("#search-nav").submit();
            }
        });


        var selects = document.querySelectorAll('select');
        var instances = M.FormSelect.init(selects, {});

        var rangeSlider = document.getElementById('range');
        noUiSlider.create(rangeSlider, {
            start: [1, 50000],
            connect: true,
            step: 1,
            orientation: 'horizontal',
            range: {
                'min': 1,
                'max': 50000
            },
            format: wNumb({
                decimals: 0
            })
        });
        var priceMin = document.getElementById('price-min')
        var priceMax = document.getElementById('price-max')
        range.noUiSlider.on('update', function (values, handle) {
            priceMin.innerHTML = `₹${parseInt(values[0])}`
            priceMax.innerHTML = `₹${parseInt(values[1])}`
        });


    });
</script>


